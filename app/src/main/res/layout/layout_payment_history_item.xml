<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="paymentHistoryInfo"
            type="com.example.kubaattendance.actors.gym_owner.payments.PaymentHistoryInfo" />
    </data>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="15pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/created_at_tv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:fontFamily="@font/crc55"
                android:gravity="center_vertical"
                android:paddingLeft="3pt"
                tools:text="28 Feb 2020 02:59:33">

            </TextView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:fontFamily="@font/crc55"
                android:gravity="center_vertical"
                android:paddingLeft="3pt"
                android:text="@{paymentHistoryInfo.paid_amount}"
                tools:text="1000">

            </TextView>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1pt"
            android:background="@color/colorPrimary">

        </View>

    </LinearLayout>
</layout>
